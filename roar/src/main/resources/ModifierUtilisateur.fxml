<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.Cursor?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ModifierUtilisateurController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #f5f7fa;">

    <!-- En-tête -->
    <Label text="Modifier un Utilisateur"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
        <effect>
            <DropShadow color="rgba(0,0,0,0.1)" radius="3" spread="0.5" />
        </effect>
    </Label>

    <!-- Carte contenant le formulaire -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 25;">
        <VBox spacing="15">
            <!-- Section Informations générales -->
            <Label text="Informations générales"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3498db; -fx-padding: 0 0 5 0;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
                </columnConstraints>

                <Label text="Nom:" style="-fx-text-fill: #7f8c8d;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" promptText="Nom" GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

                <Label text="Prénom:" style="-fx-text-fill: #7f8c8d;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="prenomField" promptText="Prénom" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

                <Label text="Email:" style="-fx-text-fill: #7f8c8d;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="2" GridPane.columnIndex="1"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

                <Label text="Mot de passe:" style="-fx-text-fill: #7f8c8d;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="passwordField" promptText="Mot de passe" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

                <Label text="Type:" style="-fx-text-fill: #7f8c8d;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="typeLabel" text="Type: " style="-fx-font-style: italic; -fx-text-fill: #2c3e50;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>

        <!-- Séparateur -->
        <Separator style="-fx-padding: 10 0 10 0;" />

        <!-- Section Informations spécifiques - Version originale améliorée -->
        <VBox spacing="15">
            <Label text="Informations spécifiques"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3498db; -fx-padding: 0 0 5 0;" />

            <VBox spacing="10" style="-fx-padding: 0 0 0 10;">
                <TextField fx:id="specialiteField" promptText="Spécialité" visible="false"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-max-width: 300;"/>

                <TextField fx:id="adresseField" promptText="Adresse" visible="false"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-max-width: 300;"/>

                <TextField fx:id="telephoneField" promptText="Téléphone" visible="false"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-max-width: 300;"/>

                <DatePicker fx:id="dateNaissancePicker" promptText="Date de naissance" visible="false"
                            style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-max-width: 300;"/>
            </VBox>
        </VBox>
    </VBox>

    <!-- Bouton Enregistrer -->
    <Button fx:id="btnEnregistrer" text="Enregistrer"
            style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 8 20 8 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
            onAction="#handleEnregistrer">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</VBox>