<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FrontController">
    <!-- Enhanced Colorful Navigation -->
    <top>
        <VBox style="-fx-background-color: #059CFC;">
            <!-- Top Contact Bar -->
            <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #0482E0; -fx-padding: 8 50;">
                <HBox spacing="25">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="✆ +880 1234 56789" />
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="✉ support@mediclus.com" />
                </HBox>
            </HBox>

            <!-- Main Navigation with Colorful Elements -->
            <HBox style="-fx-background-color: white; -fx-padding: 0 50; -fx-alignment: CENTER;">
                <!-- Logo -->
                <ImageView fitHeight="65" fitWidth="220" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/logo.png" />
                    </image>
                </ImageView>

                <!-- Colorful Navigation Buttons -->
                <HBox alignment="CENTER" spacing="0" HBox.hgrow="ALWAYS">
                    <!-- Home Button with Blue Color -->
                    <Button style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="HOME">
                        <HBox.margin>
                            <Insets right="2" />
                        </HBox.margin>
                    </Button>

                    <!-- Doctors Button with Blue Color -->
                    <Button style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="DOCTORS">
                        <HBox.margin>
                            <Insets left="2" right="2" />
                        </HBox.margin>
                    </Button>

                    <!-- Services Button with Blue Color -->
                    <Button fx:id="servicesButton" onAction="#loadInterfaceScene" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="SERVICES">
                        <HBox.margin>
                            <Insets left="2" right="2" />
                        </HBox.margin>
                    </Button>

                    <!-- Infrastructure Button with Blue Color -->
                    <Button style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="INFRASTRUCTURE">
                        <HBox.margin>
                            <Insets left="2" right="2" />
                        </HBox.margin>
                    </Button>

                    <!-- Medicament Button with Blue Color -->
                    <Button style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="MEDICAMENT">
                        <HBox.margin>
                            <Insets left="2" right="2" />
                        </HBox.margin>
                    </Button>

                    <!-- Dossier Medical Button with Blue Color -->
                    <Button style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="DOSSIER MEDICAL">
                        <HBox.margin>
                            <Insets left="2" right="2" />
                        </HBox.margin>
                    </Button>

                    <!-- Blogs Button with Blue Color -->
                    <Button onAction="#handleLoginButton" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;" text="Se connecter">
                        <HBox.margin>
                            <Insets left="2" />
                        </HBox.margin>
                    </Button>
                </HBox>

                <!-- Blood Red Appointment Button -->
                <Button onAction="#handleAppointmentButton" style="-fx-background-color: #D10000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 15 35; -fx-background-radius: 4; -fx-effect: dropshadow(three-pass-box, rgba(209,0,0,0.3), 5, 0, 0, 1);" text="APPOINTMENT" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox spacing="0">
                    <!-- Hero Section -->
                    <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to right, #059CFC, #0482E0);">
                        <!-- Photo Column -->
                        <StackPane HBox.hgrow="ALWAYS">
                            <ImageView fitHeight="500" fitWidth="650" preserveRatio="true">
                                <image>
                                    <Image url="@img/slider3.jpg" />
                                </image>
                            </ImageView>
                        </StackPane>

                        <!-- Content Column -->
                        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 80;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold; -fx-font-family: 'Arial Rounded MT Bold';" text="EXCEPTIONAL HEALTHCARE" />
                            <Label style="-fx-text-fill: #E6F7FF; -fx-font-size: 16px; -fx-wrap-text: true; -fx-line-spacing: 1.5;" text="Compassionate medical services from specialists using cutting-edge technology." />
                            <HBox spacing="20">
                                <Button style="-fx-background-color: #D10000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-padding: 12 35; -fx-background-radius: 4;" text="BOOK NOW" />
                                <Button style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-padding: 12 35; -fx-background-radius: 4;" text="LEARN MORE" />
                            </HBox>
                        </VBox>
                    </HBox>

                    <!-- Services Section -->
                    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 80 50;">
                        <Label style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 14px; -fx-letter-spacing: 2px;" text="OUR SPECIALTIES" />
                        <Label style="-fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 32px; -fx-padding: 10 0 25 0;" text="Comprehensive Medical Services" />

                        <HBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40 0 0 0;">
                            <!-- Emergency Service -->
                            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #F8FBFF; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">
                                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                                    <image>
                                        <Image url="@img/blog2.jpg" />
                                    </image>
                                </ImageView>
                                <Label style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 18px; -fx-alignment: CENTER;" text="EMERGENCY CARE" />
                                <Label style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center; -fx-font-size: 14px; -fx-line-spacing: 1.3;" text="24/7 emergency services with specialized trauma teams." />
                            </VBox>

                            <!-- Pharmacy Service -->
                            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #F8FBFF; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">
                                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                                    <image>
                                        <Image url="@img/pf2.jpg" />
                                    </image>
                                </ImageView>
                                <Label style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 18px; -fx-alignment: CENTER;" text="PHARMACY" />
                                <Label style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center; -fx-font-size: 14px; -fx-line-spacing: 1.3;" text="Complete pharmaceutical services with licensed pharmacists." />
                            </VBox>

                            <!-- Treatment Service -->
                            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #F8FBFF; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">
                                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                                    <image>
                                        <Image url="@img/section-img.png" />
                                    </image>
                                </ImageView>
                                <Label style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 18px; -fx-alignment: CENTER;" text="MEDICAL TREATMENT" />
                                <Label style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center; -fx-font-size: 14px; -fx-line-spacing: 1.3;" text="Advanced treatments from board-certified specialists." />
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Optimized Footer -->
    <bottom>
        <VBox spacing="15" style="-fx-background-color: #0482E0; -fx-padding: 40 50 20 50;">
            <HBox alignment="TOP_LEFT" spacing="70">
                <!-- About Column -->
                <VBox alignment="TOP_LEFT" spacing="15" style="-fx-pref-width: 280;">
                    <ImageView fitHeight="55" fitWidth="190" preserveRatio="true">
                        <image>
                            <Image url="@img/logo.png" />
                        </image>
                    </ImageView>
                    <Label style="-fx-text-fill: #E6F7FF; -fx-wrap-text: true; -fx-font-size: 13px; -fx-line-spacing: 1.3;" text="Providing exceptional healthcare services with compassion and cutting-edge technology since 2010." />
                </VBox>

                <!-- Quick Links -->
                <VBox alignment="TOP_LEFT" spacing="10">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="QUICK LINKS" />
                    <VBox spacing="3">
                        <Hyperlink style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px; -fx-padding: 2 0;" text="Home" />
                        <Hyperlink style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px; -fx-padding: 2 0;" text="Doctors" />
                        <Hyperlink style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px; -fx-padding: 2 0;" text="Services" />
                        <Hyperlink style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px; -fx-padding: 2 0;" text="Medicament" />
                        <Hyperlink style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px; -fx-padding: 2 0;" text="Dossier Medical" />
                        <Hyperlink style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px; -fx-padding: 2 0;" text="Contact" />
                    </VBox>
                </VBox>

                <!-- Contact Info -->
                <VBox alignment="TOP_LEFT" spacing="10">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="CONTACT US" />
                    <VBox spacing="3">
                        <Label style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px;" text="123 Medical Drive, Health City" />
                        <Label style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px;" text="+880 1234 56789" />
                        <Label style="-fx-text-fill: #FFAFAF; -fx-font-size: 13px;" text="support@mediclus.com" />
                    </VBox>
                </VBox>
            </HBox>

            <!-- Copyright -->
            <HBox alignment="CENTER" style="-fx-border-color: #059CFC; -fx-border-width: 1 0 0 0; -fx-padding: 15 0 0 0;">
                <Label style="-fx-text-fill: #C4E4FF; -fx-font-size: 12px;" text="© 2023 MediPlus. All Rights Reserved." />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
