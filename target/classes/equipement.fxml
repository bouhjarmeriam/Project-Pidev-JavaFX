<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.EquipementController"
      spacing="25"
      style="-fx-padding: 30;
             -fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
             -fx-font-family: 'Segoe UI', Arial;
             -fx-border-insets: 10;
             -fx-background-insets: 10;">

    <!-- Titre principal -->
    <Label text="Gestion des Équipements"
           style="-fx-font-size: 36px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #2F4F4F;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0.5, 0, 1);"/>

    <!-- Sous-titre -->
    <Label text="Gérez les équipements de l'hôpital depuis cette interface."
           style="-fx-text-fill: #336699;
                  -fx-font-size: 18px;
                  -fx-font-style: italic;"/>

    <!-- Conteneur des catégories avec une carte claire -->
    <VBox fx:id="categoryList" spacing="12"
          style="-fx-background-color: #ffffff;
                 -fx-padding: 20;
                 -fx-border-color: #cce0ff;
                 -fx-border-width: 1;
                 -fx-border-radius: 12;
                 -fx-background-radius: 12;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
        <!-- Les catégories seront ajoutées dynamiquement ici depuis le contrôleur -->
    </VBox>

    <!-- Zone de contenu des détails -->
    <HBox fx:id="contentArea" spacing="15"
          style="-fx-background-color: #fefefe;
                 -fx-padding: 25;
                 -fx-border-color: #b0c4de;
                 -fx-border-width: 1;
                 -fx-border-radius: 12;
                 -fx-background-radius: 12;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0.1, 0, 2);">
        <!-- Contenu dynamique ajouté ici selon les catégories sélectionnées -->
    </HBox>
</VBox>
