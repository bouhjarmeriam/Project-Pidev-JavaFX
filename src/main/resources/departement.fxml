<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.DepartementController"
      stylesheets="@styles1.css"
      spacing="0">

    <!-- Barre de navigation -->
    <HBox styleClass="navbar">
        <Button text="Départements" styleClass="nav-btn active" onAction="#showDepartements"/>
        <Button text="Étages" styleClass="nav-btn" onAction="#showEtages"/>
        <Button text="Salles" styleClass="nav-btn" onAction="#showSalles"/>
        <Button text="Acceuil" styleClass="nav-btn" onAction="#Acceuil"/>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="content-scroll">
        <VBox styleClass="main-container" spacing="20">
            <!-- En-tête -->
            <Label text="Gestion des Départements" styleClass="header-title"/>

            <!-- Formulaire -->
            <VBox styleClass="form-container" spacing="15">
                <GridPane hgap="10" vgap="10">
                    <Label text="Nom:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nomField" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label fx:id="nomError" styleClass="error-label" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                    <Label text="Adresse:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="adresseField" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label fx:id="adresseError" styleClass="error-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                    <Label text="Image:" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <TextField fx:id="imageField" styleClass="form-field" editable="false"/>
                        <Button fx:id="browseBtn" text="Parcourir" styleClass="browse-btn" onAction="#handleBrowseImage"/>
                    </HBox>
                    <Label fx:id="imageError" styleClass="error-label" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

                    <ImageView fx:id="imagePreview" fitHeight="100" fitWidth="100" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10" styleClass="button-container">
                    <Button fx:id="saveBtn" text="Enregistrer" styleClass="primary-btn" onAction="#handleSave"/>
                    <Button fx:id="clearBtn" text="Effacer" styleClass="secondary-btn" onAction="#handleClear"/>
                </HBox>
            </VBox>

            <!-- Tableau -->
            <VBox styleClass="table-container" spacing="10">
                <Label text="Liste des départements" styleClass="section-title"/>

                <TableView fx:id="departementTable" styleClass="data-table">
                    <columns>
                        <TableColumn fx:id="nomColumn" text="Nom"/>
                        <TableColumn fx:id="adresseColumn" text="Adresse"/>
                        <TableColumn fx:id="imageColumn" text="Logo"/>
                        <TableColumn fx:id="actionsColumn" text="Actions"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>