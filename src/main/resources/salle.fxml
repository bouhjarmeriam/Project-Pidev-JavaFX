<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.SalleController"
      stylesheets="@styles1.css"
      spacing="0">

    <!-- Barre de navigation -->
    <HBox styleClass="navbar">
        <Button text="Départements" styleClass="nav-btn" onAction="#showDepartements"/>
        <Button text="Étages" styleClass="nav-btn" onAction="#showEtages"/>
        <Button text="Salles" styleClass="nav-btn active" onAction="#showSalles"/>
        <Button text="Acceuil" styleClass="nav-btn" onAction="#Acceuil"/>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="content-scroll">
        <VBox styleClass="main-container" spacing="20">
            <!-- En-tête -->
            <Label text="Gestion des Salles" styleClass="header-title"/>

            <!-- Formulaire -->
            <VBox styleClass="form-container" spacing="15">
                <Label text="Ajouter une salle" styleClass="section-title"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints halignment="LEFT" minWidth="300"/>
                        <ColumnConstraints halignment="LEFT" minWidth="200"/>
                    </columnConstraints>

                    <!-- Ligne 1: Nom -->
                    <Label text="Nom:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nomField" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label fx:id="nomError" styleClass="error-label" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                    <!-- Ligne 2: Capacité -->
                    <Label text="Capacité:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="capaciteField" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label fx:id="capaciteError" styleClass="error-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                    <!-- Ligne 3: Type -->
                    <Label text="Type:" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="typeCombo" styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label fx:id="typeError" styleClass="error-label" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

                    <!-- Ligne 4: Status -->
                    <Label text="Status:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="statusCombo" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    <Label fx:id="statusError" styleClass="error-label" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

                    <!-- Ligne 5: Priorité -->
                    <Label text="Priorité:" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <HBox styleClass="form-field" GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="5">
                        <Spinner fx:id="prioriteSpinner" styleClass="spinner-field">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="10" initialValue="1"/>
                            </valueFactory>
                        </Spinner>
                    </HBox>
                    <Label fx:id="prioriteError" styleClass="error-label" GridPane.rowIndex="4" GridPane.columnIndex="2"/>

                    <!-- Ligne 6: Étage -->
                    <Label text="Étage:" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="etageCombo" styleClass="form-field" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    <Label fx:id="etageError" styleClass="error-label" GridPane.rowIndex="5" GridPane.columnIndex="2"/>

                    <!-- Ligne 7: Image -->
                    <Label text="Image:" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                        <TextField fx:id="imageField" styleClass="form-field" editable="false"/>
                        <Button fx:id="browseBtn" text="Parcourir" styleClass="browse-btn" onAction="#handleBrowseImage"/>
                    </HBox>
                    <Label fx:id="imageError" styleClass="error-label" GridPane.rowIndex="6" GridPane.columnIndex="2"/>

                    <!-- Ligne 8: Aperçu image -->
                    <ImageView fx:id="imagePreview" fitHeight="100" fitWidth="100"
                               GridPane.rowIndex="7" GridPane.columnIndex="1"
                               GridPane.halignment="LEFT"/>

                    <!-- Boutons -->
                    <HBox spacing="10" styleClass="button-container" GridPane.rowIndex="8" GridPane.columnIndex="1">
                        <Button text="Enregistrer" styleClass="primary-btn" onAction="#handleSave"/>
                        <Button text="Effacer" styleClass="secondary-btn" onAction="#handleClear"/>
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Tableau -->
            <VBox styleClass="table-container" spacing="10">
                <Label text="Liste des Salles" styleClass="section-title"/>

                <TableView fx:id="salleTable" styleClass="data-table">
                    <columns>
                        <TableColumn fx:id="nomColumn" text="Nom" styleClass="table-column"/>
                        <TableColumn fx:id="capaciteColumn" text="Capacité" styleClass="table-column"/>
                        <TableColumn fx:id="typeColumn" text="Type" styleClass="table-column"/>
                        <TableColumn fx:id="statusColumn" text="Status" styleClass="table-column"/>
                        <TableColumn fx:id="prioriteColumn" text="Priorité" styleClass="table-column"/>
                        <TableColumn fx:id="etageColumn" text="Étage" styleClass="table-column"/>
                        <TableColumn fx:id="imageColumn" text="Image" styleClass="table-column"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" styleClass="table-column"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>