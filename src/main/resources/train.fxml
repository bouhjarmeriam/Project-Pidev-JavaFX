<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Enhanced Colorful Navigation -->
    <top>
        <VBox style="-fx-background-color: #059CFC;">
            <!-- Top Contact Bar -->
            <HBox style="-fx-background-color: #0482E0; -fx-padding: 8 50;" alignment="CENTER_RIGHT">
                <HBox spacing="25">
                    <Label text="✆ +880 1234 56789" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Label text="✉ support@mediclus.com" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </HBox>

            <!-- Main Navigation with Colorful Elements -->
            <HBox style="-fx-background-color: white; -fx-padding: 0 50; -fx-alignment: CENTER;">
                <!-- Logo -->
                <ImageView fitWidth="220" fitHeight="65" preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@img/logo.png" />
                    </image>
                </ImageView>

                <!-- Colorful Navigation Buttons -->
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER" spacing="0">
                    <!-- Home Button with Blue Color -->
                    <Button text="HOME" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets right="2"/>
                        </HBox.margin>
                    </Button>

                    <!-- Doctors Button with Blue Color -->
                    <Button text="DOCTORS" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets left="2" right="2"/>
                        </HBox.margin>
                    </Button>

                    <!-- Services Button with Blue Color -->
                    <Button text="SERVICES" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets left="2" right="2"/>
                        </HBox.margin>
                    </Button>

                    <!-- Infrastructure Button with Blue Color -->
                    <Button text="INFRASTRUCTURE" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets left="2" right="2"/>
                        </HBox.margin>
                    </Button>

                    <!-- Blogs Button with Blue Color -->
                    <Button text="BLOGS" style="-fx-background-color: #E6F2FF, white; -fx-background-insets: 0, 1; -fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 20 25; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets left="2"/>
                        </HBox.margin>
                    </Button>
                </HBox>

                <!-- Blood Red Appointment Button -->
                <Button text="APPOINTMENT"
                        style="-fx-background-color: #D10000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 15 35; -fx-background-radius: 4; -fx-effect: dropshadow(three-pass-box, rgba(209,0,0,0.3), 5, 0, 0, 1);"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox spacing="0">
                    <!-- Hero Section -->
                    <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to right, #059CFC, #0482E0);">
                        <!-- Photo Column -->
                        <StackPane HBox.hgrow="ALWAYS">
                            <ImageView fitWidth="650" fitHeight="500" preserveRatio="true">
                                <image>
                                    <Image url="@img/slider3.jpg" />
                                </image>
                            </ImageView>
                        </StackPane>

                        <!-- Content Column -->
                        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 80;" HBox.hgrow="ALWAYS">
                            <Label text="EXCEPTIONAL HEALTHCARE"
                                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold; -fx-font-family: 'Arial Rounded MT Bold';"/>
                            <Label text="Compassionate medical services from specialists using cutting-edge technology."
                                   style="-fx-text-fill: #E6F7FF; -fx-font-size: 16px; -fx-wrap-text: true; -fx-line-spacing: 1.5;"/>
                            <HBox spacing="20">
                                <Button text="BOOK NOW"
                                        style="-fx-background-color: #D10000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-padding: 12 35; -fx-background-radius: 4;"/>
                                <Button text="LEARN MORE"
                                        style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-padding: 12 35; -fx-background-radius: 4;"/>
                            </HBox>
                        </VBox>
                    </HBox>

                    <!-- Services Section -->
                    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 80 50;">
                        <Label text="OUR SPECIALTIES" style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 14px; -fx-letter-spacing: 2px;"/>
                        <Label text="Comprehensive Medical Services" style="-fx-text-fill: #059CFC; -fx-font-weight: bold; -fx-font-size: 32px; -fx-padding: 10 0 25 0;"/>

                        <HBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40 0 0 0;">
                            <!-- Emergency Service -->
                            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #F8FBFF; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@img/blog2.jpg" />
                                    </image>
                                </ImageView>
                                <Label text="EMERGENCY CARE" style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 18px; -fx-alignment: CENTER;"/>
                                <Label text="24/7 emergency services with specialized trauma teams."
                                       style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center; -fx-font-size: 14px; -fx-line-spacing: 1.3;"/>
                            </VBox>

                            <!-- Pharmacy Service -->
                            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #F8FBFF; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@img/pf2.jpg" />
                                    </image>
                                </ImageView>
                                <Label text="PHARMACY" style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 18px; -fx-alignment: CENTER;"/>
                                <Label text="Complete pharmaceutical services with licensed pharmacists."
                                       style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center; -fx-font-size: 14px; -fx-line-spacing: 1.3;"/>
                            </VBox>

                            <!-- Treatment Service -->
                            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #F8FBFF; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@img/section-img.png" />
                                    </image>
                                </ImageView>
                                <Label text="MEDICAL TREATMENT" style="-fx-text-fill: #D10000; -fx-font-weight: bold; -fx-font-size: 18px; -fx-alignment: CENTER;"/>
                                <Label text="Advanced treatments from board-certified specialists."
                                       style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center; -fx-font-size: 14px; -fx-line-spacing: 1.3;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <VBox style="-fx-background-color: #0482E0; -fx-padding: 60 50 30 50;">
            <HBox alignment="TOP_LEFT" spacing="80">
                <!-- About Column -->
                <VBox alignment="TOP_LEFT" spacing="20" style="-fx-pref-width: 300;">
                    <ImageView fitWidth="200" fitHeight="60" preserveRatio="true">
                        <image>
                            <Image url="@img/logo.png" />
                        </image>
                    </ImageView>
                    <Label text="Providing exceptional healthcare services with compassion and cutting-edge technology since 2010."
                           style="-fx-text-fill: #E6F7FF; -fx-wrap-text: true; -fx-font-size: 14px; -fx-line-spacing: 1.5;"/>
                </VBox>

                <!-- Quick Links -->
                <VBox alignment="TOP_LEFT" spacing="15">
                    <Label text="QUICK LINKS" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Hyperlink text="Home" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px; -fx-padding: 3 0;"/>
                    <Hyperlink text="Doctors" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px; -fx-padding: 3 0;"/>
                    <Hyperlink text="Services" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px; -fx-padding: 3 0;"/>
                    <Hyperlink text="Contact" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px; -fx-padding: 3 0;"/>
                </VBox>

                <!-- Contact Info -->
                <VBox alignment="TOP_LEFT" spacing="15">
                    <Label text="CONTACT US" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Label text="123 Medical Drive, Health City" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px;"/>
                    <Label text="+880 1234 56789" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px;"/>
                    <Label text="support@yourmail.com" style="-fx-text-fill: #FFAFAF; -fx-font-size: 14px;"/>
                </VBox>
            </HBox>

            <!-- Copyright -->
            <HBox style="-fx-border-color: #059CFC; -fx-border-width: 1 0 0 0; -fx-padding: 20 0 0 0;" alignment="CENTER">
                <Label text="© 2023 MediPlus. All Rights Reserved." style="-fx-text-fill: #C4E4FF; -fx-font-size: 13px;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>