<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EtageController"
            prefHeight="600" prefWidth="900">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Gestion des Étages" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

        <!-- Formulaire -->
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
            <Label text="Ajouter un Étage" style="-fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" minWidth="300"/>
                </columnConstraints>

                <Label text="Numéro :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="numeroField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label fx:id="numeroError" text="" style="-fx-text-fill: red;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Département :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="departementCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label fx:id="departementError" text="" style="-fx-text-fill: red;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Button text="Ajouter" onAction="#handleSave" GridPane.rowIndex="4" GridPane.columnIndex="1"
                        GridPane.halignment="RIGHT" style="-fx-pref-width: 120;"/>
            </GridPane>
        </VBox>

        <!-- Tableau avec ScrollPane -->
        <VBox spacing="5" style="-fx-padding: 10;" VBox.vgrow="ALWAYS">
            <Label text="Étages existants" style="-fx-font-weight: bold;"/>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <TableView fx:id="etageTable" style="-fx-table-cell-border-color: transparent;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" minWidth="50"/>
                        <TableColumn fx:id="numeroColumn" text="Numéro" minWidth="100"/>
                        <TableColumn fx:id="departementColumn" text="Département" minWidth="200"/>
                        <TableColumn fx:id="modifierColumn" text="Modifier" minWidth="80"/>
                        <TableColumn fx:id="supprimerColumn" text="Supprimer" minWidth="80"/>
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </VBox>
</AnchorPane>