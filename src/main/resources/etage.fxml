<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.EtageController"
      stylesheets="styles1.css"
      spacing="0">

    <!-- Navigation Bar (Fixed at the top) -->
    <HBox styleClass="nav-bar" spacing="10" style="-fx-padding: 10;" HBox.hgrow="ALWAYS">
        <Button text="Départements" styleClass="nav-button" onAction="#showDepartements"/>
        <Button text="Étages" styleClass="nav-button active" onAction="#showEtages"/>
        <Button text="Salles" styleClass="nav-button" onAction="#showSalles"/>
        <Button text="Acceuil" styleClass="nav-button" onAction="#Acceuil"/>
    </HBox>

    <!-- Scrollable Content (Form and Table) -->
    <ScrollPane fitToWidth="true" styleClass="scroll-pane" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
        <VBox spacing="20" fillWidth="true" style="-fx-padding: 20;">
            <!-- Header -->
            <Label text="Gestion des Étages" styleClass="section-title"/>

            <!-- Form Section -->
            <VBox styleClass="card" spacing="15" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
                <GridPane hgap="10" vgap="10" HBox.hgrow="ALWAYS">
                    <!-- Numéro -->
                    <Label text="Numéro:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="numeroField" styleClass="text-field" GridPane.rowIndex="0" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="numeroError" styleClass="error-label" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                    <!-- Département -->
                    <Label text="Département:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="departementCombo" styleClass="combo-box" GridPane.rowIndex="1" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="departementError" styleClass="error-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="saveButton" text="Ajouter" styleClass="button" onAction="#handleSave"/>
                    <Button fx:id="cancelButton" text="Effacer" styleClass="button" onAction="#clearForm"/>
                </HBox>
            </VBox>

            <!-- Table Section -->
            <VBox styleClass="card" spacing="10" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
                <Label text="Liste des Étages" styleClass="section-title"/>
                <TextField fx:id="searchField" promptText="Rechercher un étage..." styleClass="text-field" HBox.hgrow="ALWAYS"/>
                <TableView fx:id="etageTable" styleClass="table-view" HBox.hgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID"/>
                        <TableColumn fx:id="numeroColumn" text="Numéro"/>
                        <TableColumn fx:id="departementColumn" text="Département"/>
                        <TableColumn fx:id="nbrSalleColumn" text="Nb Salles"/>
                        <TableColumn fx:id="modifierColumn" text="Modifier"/>
                        <TableColumn fx:id="supprimerColumn" text="Supprimer"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>