<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SejourController"
            style="-fx-background-color: linear-gradient(to bottom, #f9f9f9, #ffffff);"
            prefWidth="1000" prefHeight="700" minWidth="800" minHeight="600">
    <top>
        <VBox spacing="10" style="-fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15">
                <FontAwesomeIconView glyphName="BED" size="28" glyphStyle="-fx-fill: white;"/>
                <Label text="Gestion des Séjours" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Segoe UI';"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Retour à l'accueil" onAction="#handleBackToHome" fx:id="btnBackToHome"
                        style="-fx-background-color: white; -fx-text-fill: #2193b0; -fx-font-family: 'Segoe UI'; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;">
                    <graphic>
                        <FontAwesomeIconView glyphName="HOME" size="16" glyphStyle="-fx-fill: #2193b0;"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Retour à l'interface d'administration"/>
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.6" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <TableView fx:id="sejourTable" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" minWidth="40"/>
                    <TableColumn fx:id="colDateEntree" text="Date d'entrée" prefWidth="120" minWidth="100"/>
                    <TableColumn fx:id="colDateSortie" text="Date de sortie" prefWidth="120" minWidth="100"/>
                    <TableColumn fx:id="colTypeSejour" text="Type" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colFraisSejour" text="Frais" prefWidth="80" minWidth="60"/>
                    <TableColumn fx:id="colMoyenPaiement" text="Paiement" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colStatutPaiement" text="Statut" prefWidth="80" minWidth="70"/>
                    <TableColumn fx:id="colPrixExtras" text="Extras" prefWidth="80" minWidth="60"/>
                    <TableColumn fx:id="colDossierMedicale" text="Dossier" prefWidth="120" minWidth="80"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="100" visible="false" minWidth="80"/>
                </columns>
                <placeholder>
                    <HBox alignment="CENTER" spacing="10">
                        <FontAwesomeIconView glyphName="BED" size="20" glyphStyle="-fx-fill: #7f8c8d;"/>
                        <Label text="Aucun séjour enregistré" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </placeholder>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <VBox spacing="15" style="-fx-background-color: transparent;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Label text="* Champs obligatoires" style="-fx-font-style: italic; -fx-text-fill: #e74c3c; -fx-font-family: 'Segoe UI';"/>

                    <TitledPane text="Détails du Séjour" expanded="true" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <graphic>
                            <FontAwesomeIconView glyphName="HOSPITAL_O" size="16" glyphStyle="-fx-fill: #2193b0;"/>
                        </graphic>
                        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 0 0 8 8;">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            <GridPane hgap="15" vgap="5" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="150" maxWidth="200"/>
                                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="250"/>
                                </columnConstraints>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                    <FontAwesomeIconView glyphName="CALENDAR_PLUS_O" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Date d'entrée: *" fx:id="lblDateEntree" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Date d'entrée du patient en hospitalisation"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <DatePicker fx:id="dateEntreePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Sélectionner la date d'entrée"/>
                                <HBox fx:id="boxDateEntreeError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblDateEntreeError" text="Veuillez sélectionner une date d'entrée valide"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="CALENDAR_CHECK_O" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Date de sortie:" fx:id="lblDateSortie" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Date de sortie prévue ou effective du patient"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <DatePicker fx:id="dateSortiePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Sélectionner la date de sortie"/>
                                <HBox fx:id="boxDateSortieError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblDateSortieError" text="La date de sortie doit être après la date d'entrée"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="LIST_UL" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Type de séjour: *" fx:id="lblTypeSejour" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Type de séjour (Hospitalisation, Ambulatoire, Urgence, etc.)"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <ComboBox fx:id="comboTypeSejour" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Sélectionner le type de séjour"/>
                                <HBox fx:id="boxTypeSejourError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblTypeSejourError" text="Veuillez sélectionner un type de séjour"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="MONEY" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Frais de séjour (€): *" fx:id="lblFraisSejour" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Montant des frais de base pour le séjour"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <TextField fx:id="txtFraisSejour" GridPane.rowIndex="6" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Entrer le montant des frais"/>
                                <HBox fx:id="boxFraisSejourError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblFraisSejourError" text="Veuillez entrer un montant valide (chiffres uniquement)"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="CREDIT_CARD" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Moyen de paiement: *" fx:id="lblMoyenPaiement" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Moyen de paiement utilisé (Carte, Espèces, Chèque, Assurance, etc.)"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <ComboBox fx:id="comboMoyenPaiement" GridPane.rowIndex="8" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Sélectionner le moyen de paiement"/>
                                <HBox fx:id="boxMoyenPaiementError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="9" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblMoyenPaiementError" text="Veuillez sélectionner un moyen de paiement"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="10" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Statut du paiement: *" fx:id="lblStatutPaiement" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="État du paiement (Payé, En attente, Partiel, Annulé, etc.)"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <ComboBox fx:id="comboStatutPaiement" GridPane.rowIndex="10" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Sélectionner le statut du paiement"/>
                                <HBox fx:id="boxStatutPaiementError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="11" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblStatutPaiementError" text="Veuillez sélectionner un statut de paiement"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="12" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Prix extras (€):" fx:id="lblPrixExtras" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Frais supplémentaires (Chambre individuelle, TV, Services additionnels, etc.)"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <TextField fx:id="txtPrixExtras" GridPane.rowIndex="12" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Entrer le montant des extras (0 si aucun)"/>
                                <HBox fx:id="boxPrixExtrasError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="13" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblPrixExtrasError" text="Veuillez entrer un montant valide (chiffres uniquement)"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="14" GridPane.columnIndex="0" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="FOLDER_OPEN" size="14" glyphStyle="-fx-fill: #2193b0;"/>
                                    <Label text="Dossier médical: *" fx:id="lblDossierMedicale" style="-fx-font-family: 'Segoe UI';">
                                        <tooltip>
                                            <Tooltip text="Dossier médical du patient associé à ce séjour"/>
                                        </tooltip>
                                    </Label>
                                </HBox>
                                <ComboBox fx:id="comboDossierMedicale" GridPane.rowIndex="14" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" promptText="Sélectionner le dossier médical"/>
                                <HBox fx:id="boxDossierMedicaleError" alignment="CENTER_LEFT" spacing="5" visible="false" managed="true"
                                      style="-fx-background-color: #FFEBEE; -fx-background-radius: 4; -fx-border-color: #FFCDD2; -fx-border-radius: 4; -fx-padding: 4 8;"
                                      GridPane.rowIndex="15" GridPane.columnIndex="1" GridPane.valignment="TOP">
                                    <FontAwesomeIconView glyphName="EXCLAMATION_CIRCLE" size="12" glyphStyle="-fx-fill: #e74c3c;"/>
                                    <Label fx:id="lblDossierMedicaleError" text="Veuillez sélectionner un dossier médical"
                                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;" />
                                </HBox>
                            </GridPane>
                        </VBox>
                    </TitledPane>

                    <TitledPane text="Actions" expanded="true" maxHeight="Infinity" VBox.vgrow="NEVER"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <graphic>
                            <FontAwesomeIconView glyphName="WRENCH" size="16" glyphStyle="-fx-fill: #7f8c8d;"/>
                        </graphic>
                        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 0 0 8 8;">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>

                            <Label fx:id="lblValidationError" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" visible="false" managed="false" />

                            <HBox spacing="15" alignment="CENTER">
                                <Button fx:id="btnAjouter" text="Ajouter" onAction="#handleAjouter" prefWidth="120" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 5; -fx-padding: 10 15; -fx-cursor: hand;">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="PLUS" size="14" glyphStyle="-fx-fill: white;"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Ajouter un nouveau séjour"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="btnModifier" text="Modifier" onAction="#handleModifier" prefWidth="120" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 5; -fx-padding: 10 15; -fx-cursor: hand;">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="PENCIL" size="14" glyphStyle="-fx-fill: white;"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Modifier le séjour sélectionné"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#handleSupprimer" prefWidth="120" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 5; -fx-padding: 10 15; -fx-cursor: hand;">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="TRASH" size="14" glyphStyle="-fx-fill: white;"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Supprimer le séjour sélectionné"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="btnVoir" text="Voir détails" onAction="#handleVoir" prefWidth="120" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 5; -fx-padding: 10 15; -fx-cursor: hand;">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="EYE" size="14" glyphStyle="-fx-fill: white;"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Voir les détails complets du séjour"/>
                                    </tooltip>
                                </Button>
                            </HBox>
                        </VBox>
                    </TitledPane>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Rafraîchir" onAction="#handleRefresh" fx:id="btnRefresh"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 5; -fx-padding: 8 15; -fx-cursor: hand;">
                            <graphic>
                                <FontAwesomeIconView glyphName="REFRESH" size="14" glyphStyle="-fx-fill: white;"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Actualiser les données"/>
                            </tooltip>
                        </Button>
                        <Button text="Fermer" onAction="#handleClose" fx:id="btnClose"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 5; -fx-padding: 8 15; -fx-cursor: hand;">
                            <graphic>
                                <FontAwesomeIconView glyphName="CLOSE" size="14" glyphStyle="-fx-fill: white;"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Fermer la fenêtre"/>
                            </tooltip>
                        </Button>
                    </HBox>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>

    <bottom>
        <HBox style="-fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed); -fx-padding: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, -3);">
            <Label text="Système de Gestion Médicale | Développé en JavaFX" style="-fx-text-fill: white; -fx-font-family: 'Segoe UI';"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="5" alignment="CENTER">
                <FontAwesomeIconView glyphName="COPYRIGHT" size="14" glyphStyle="-fx-fill: white;"/>
                <Label text="2023 Clinique Médicale" style="-fx-text-fill: white; -fx-font-family: 'Segoe UI';"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane> 