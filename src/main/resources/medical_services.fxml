<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.MedicalServicesController"
            stylesheets="@/medical-service.css">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Medical Service Management" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

        <!-- Form Section -->
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
            <Label text="Add New Service" style="-fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" minWidth="300"/>
                </columnConstraints>

                <Label text="Service Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="serviceName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label fx:id="serviceNameError" text="" style="-fx-text-fill: red;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="serviceDescription" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3"/>
                <Label fx:id="serviceDescriptionError" text="" style="-fx-text-fill: red;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Duration (hours):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <HBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="5" alignment="CENTER_LEFT">
                    <Spinner fx:id="durationSpinner" minWidth="100">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="24" initialValue="1"/>
                        </valueFactory>
                    </Spinner>
                </HBox>
                <Label fx:id="durationError" text="" style="-fx-text-fill: red;" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Button text="Add Service" onAction="#handleSubmit" GridPane.rowIndex="6" GridPane.columnIndex="1"
                        GridPane.halignment="RIGHT" style="-fx-pref-width: 120;"/>
            </GridPane>
        </VBox>

        <!-- Table Section -->
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="Existing Services" style="-fx-font-weight: bold;"/>
            <TableView fx:id="servicesTable" style="-fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Service Name" minWidth="150"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" minWidth="300"/>
                    <TableColumn fx:id="durationColumn" text="Duration (hours)" minWidth="100"/>
                    <TableColumn fx:id="modifyColumn" text="Modify" minWidth="100"/>
                    <TableColumn fx:id="deleteColumn" text="Delete" minWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>
